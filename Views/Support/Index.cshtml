@model List<_20241129402SoruCevapPortali.Models.SupportTicket>
@{
    ViewData["Title"] = "Destek Taleplerim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Destek Taleplerim</h2>
        <a href="/Support/Create" class="btn btn-primary"><i class="fas fa-plus"></i> Yeni Talep Oluştur</a>
    </div>

    @if (Model.Count > 0)
    {
        <div class="table-responsive">
            <table class="table table-hover shadow-sm">
                <thead class="thead-dark">
                    <tr>
                        <th>Konu</th>
                        <th>Tarih</th>
                        <th>Durum</th>
                        <th>İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Subject</td>
                            <td>@item.CreatedDate.ToString("dd.MM.yyyy")</td>
                            <td>
                                @if (item.IsClosed)
                                {
                                    <span class="badge badge-secondary">Kapandı</span>
                                }
                                else
                                {
                                    <span class="badge badge-success">Açık / Yanıt Bekliyor</span>
                                }
                            </td>
                            <td>
                                <a href="/Support/Details/@item.Id" class="btn btn-sm btn-info">Görüntüle</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">Henüz bir destek talebiniz bulunmuyor.</div>
    }
</div>