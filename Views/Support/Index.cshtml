@model List<_20241129402SoruCevapPortali.Models.SupportTicket>
@{
    ViewData["Title"] = "Destek Taleplerim";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-white">Destek Taleplerim</h2>
        <a href="/Support/Create" class="btn btn-success"><i class="fas fa-plus"></i> Yeni Talep</a>
    </div>

    @foreach (var item in Model)
    {
        <div class="card bg-dark border-secondary mb-2">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="text-danger mb-0">@item.Subject</h5>
                    <small class="text-muted">@item.CreatedDate.ToString("g")</small>
                </div>
                <div>
                    @if (item.IsClosed)
                    {
                        <span class="badge bg-secondary">Kapalı</span>
                    }
                    else
                    {

                        <span class="badge bg-success">Açık</span>
                    }

                    <a href="/Support/Details/@item.Id" class="btn btn-sm btn-outline-light ms-2">Görüntüle</a>
                </div>
            </div>
        </div>
    }
</div>