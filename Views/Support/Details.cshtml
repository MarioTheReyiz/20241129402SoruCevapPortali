@model _20241129402SoruCevapPortali.Models.SupportTicket
@{
    ViewData["Title"] = "Talep Detayı";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var messages = ViewBag.Messages as List<_20241129402SoruCevapPortali.Models.TicketMessage>;
}

<div class="container mt-5">
    <div class="d-flex justify-content-between mb-3">
        <h3>@Model.Subject</h3>
        <a href="/Support/Index" class="btn btn-outline-secondary">Listeye Dön</a>
    </div>

    <div class="card shadow">
        <div class="card-body" style="background-color: #f8f9fa; height: 400px; overflow-y: auto;">
            @if (messages != null)
            {
                foreach (var msg in messages)
                {
                    bool isMe = msg.SenderId == Model.UserId;

                    <div class="d-flex mb-3 @(isMe ? "justify-content-end" : "justify-content-start")">
                        <div class="p-3 rounded text-white"
                             style="max-width: 70%; background-color: @(isMe ? "#007bff" : "#6c757d");">
                            <small class="d-block text-white-50 mb-1">
                                @(isMe ? "Ben" : "Destek Ekibi") • @msg.Date.ToString("HH:mm")
                            </small>
                            @msg.Content
                        </div>
                    </div>
                }
            }
        </div>
        <div class="card-footer">
            @if (!Model.IsClosed)
            {
                <form asp-action="Reply" method="post" class="d-flex">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <input type="text" name="content" class="form-control mr-2" placeholder="Yanıt yazın..." required />
                    <button type="submit" class="btn btn-primary ml-2">Gönder</button>
                </form>
            }
            else
            {
                <div class="alert alert-warning mb-0 text-center">
                    Bu destek talebi kapatılmıştır. Yeni bir talep oluşturabilirsiniz.
                </div>
            }
        </div>
    </div>
</div>