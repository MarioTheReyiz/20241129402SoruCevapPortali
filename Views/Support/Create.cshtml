@{
    ViewData["Title"] = "Yeni Destek Talebi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Yeni Destek Talebi</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="form-group mb-3">
                            <label class="font-weight-bold">Konu / Başlık</label>
                            <input type="text" name="subject" class="form-control" placeholder="Örn: Şifremi değiştiremiyorum" required />
                        </div>

                        <div class="form-group mb-3">
                            <label class="font-weight-bold">Mesajınız</label>
                            <textarea name="message" class="form-control" rows="5" placeholder="Sorununuzu detaylıca anlatın..." required></textarea>
                        </div>

                        <button type="submit" class="btn btn-success"><i class="fas fa-paper-plane"></i> Talebi Gönder</button>
                        <a href="/Support/Index" class="btn btn-secondary">İptal</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>