@using _20241129402SoruCevapPortali.Models
@using Microsoft.AspNetCore.Identity
@inject UserManager<AppUser> UserManager

@model List<AppUser>

@{
    ViewData["Title"] = "Yetki Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 bg-danger">
        <h6 class="m-0 font-weight-bold text-white">Yetki Yönetimi (Sadece Admin)</h6>
    </div>
    <div class="card-body">
        <div class="alert alert-warning">
            <strong>Dikkat:</strong> Buradan kullanıcıların sistemdeki rollerini değiştirebilirsiniz.
            <ul>
                <li><strong>Admin:</strong> Tam yetki. Yetki verebilir.</li>
                <li><strong>Moderator:</strong> Paneli kullanır ama yetki veremez.</li>
                <li><strong>User:</strong> Panele giremez.</li>
            </ul>
        </div>
        <div class="table-responsive">
            <table class="table table-bordered" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Kullanıcı Adı</th>
                        <th>Mevcut Rol</th>
                        <th>Rolü Değiştir</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        var roles = await UserManager.GetRolesAsync(item);
                        var userRole = roles.FirstOrDefault() ?? "User";

                        <tr>
                            <td>
                                <img src="/img/undraw_profile.svg" width="30" class="rounded-circle mr-2">
                                @item.UserName
                            </td>
                            <td>
                                @if (userRole == "Admin")
                                {
                                    <span class="badge bg-danger text-white">Admin</span>
                                }
                                else if (userRole == "Moderator")
                                {
                                    <span class="badge bg-warning text-dark">Moderator</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary text-white">User</span>
                                }
                            </td>
                            <td>
                                <button class="btn btn-outline-danger btn-sm role-btn" data-id="@item.Id" data-role="Admin">Admin Yap</button>
                                <button class="btn btn-outline-warning btn-sm role-btn" data-id="@item.Id" data-role="Moderator">Moderator Yap</button>
                                <button class="btn btn-outline-secondary btn-sm role-btn" data-id="@item.Id" data-role="User">User Yap</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $(".role-btn").click(function () {
                var id = $(this).data("id");
                var newRole = $(this).data("role");

                if (confirm("Bu kullanıcının rolünü " + newRole + " olarak değiştirmek istediğinize emin misiniz?")) {
                    $.post("/Admin/UpdateRole", { id: id, newRole: newRole }, function (res) {
                        if (res.success) {
                            alert(res.message);
                            location.reload();
                        } else {
                            alert("Hata: " + res.message);
                        }
                    });
                }
            });
        });
    </script>
}