@model _20241129402SoruCevapPortali.Models.Question
@{
    ViewData["Title"] = "Soru Düzenle"; Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow p-4">
    <h4 class="mb-3">Soruyu Düzenle</h4>
    <form method="post">
        <input type="hidden" asp-for="Id" />
        <div class="mb-3">
            <label>Başlık</label>
            <input type="text" asp-for="Title" class="form-control" required />
        </div>
        <div class="mb-3">
            <label>Kategori</label>
            @Html.DropDownListFor(x => x.CategoryId, (SelectList)ViewBag.Categories, new { @class = "form-control" })
        </div>
        <div class="mb-3">
            <label>İçerik</label>
            <textarea asp-for="Content" class="form-control" rows="5"></textarea>
        </div>
        <div class="mb-3 form-check">
            <input type="checkbox" asp-for="IsApproved" class="form-check-input" />
            <label class="form-check-label">Yayında (Onaylı)</label>
        </div>
        <button class="btn btn-success">Güncelle</button>
        <a href="/Admin/Questions" class="btn btn-secondary">İptal</a>
    </form>
</div>