@model _20241129402SoruCevapPortali.Models.Question
@{
    ViewData["Title"] = "Forum Detayı";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var answers = ViewBag.Answers as List<_20241129402SoruCevapPortali.Models.Answer>;
}

<div class="container-fluid">

    <div class="card shadow mb-4 border-left-primary">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">@Model.Title</h6>
            <span class="badge bg-secondary">@(Model.User != null ? Model.User.Username : "Bilinmiyor")</span>
        </div>
        <div class="card-body">
            <p class="card-text" style="font-size: 1.1rem;">@Model.Content</p>
            <div class="text-right text-muted small">
                Tarih: @Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")
            </div>
        </div>
        <div class="card-footer">
            <a href="/Admin/Questions" class="btn btn-secondary btn-sm">Geri Dön</a>
            <a href="/Admin/EditQuestion/@Model.Id" class="btn btn-warning btn-sm">Soruyu Düzenle</a>
        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-gray-200">
            <h6 class="m-0 font-weight-bold text-gray-800">Gelen Yanıtlar (@answers.Count)</h6>
        </div>
        <div class="card-body">
            @if (answers.Count > 0)
            {
                <div class="table-responsive">
                    <table class="table table-bordered" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Cevaplayan</th>
                                <th>Yanıt İçeriği</th>
                                <th>Tarih</th>
                                <th>İşlem</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ans in answers)
                            {
                                <tr id="ans_@ans.Id">
                                    <td style="width: 15%;">
                                        <div class="d-flex align-items-center">
                                            <img class="img-profile rounded-circle mr-2" style="width:30px" src="~/img/undraw_profile.svg">
                                            <span class="font-weight-bold">@(ans.User != null ? ans.User.Username : "Silinmiş Üye")</span>
                                        </div>
                                    </td>
                                    <td>@ans.Content</td>
                                    <td style="width: 15%;">@ans.CreatedDate.ToString("dd.MM.yyyy")</td>
                                    <td style="width: 10%;">
                                        <button class="btn btn-danger btn-sm btn-delete-ans" data-id="@ans.Id">
                                            <i class="fas fa-trash"></i> Sil
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center">
                    Bu soruya henüz hiç cevap verilmemiş.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Cevap Silme AJAX İşlemi
            $(".btn-delete-ans").click(function () {
                var id = $(this).data("id");
                var row = $("#ans_" + id);
                if (confirm("Bu yanıtı kalıcı olarak silmek istiyor musunuz?")) {
                    $.post("/Admin/DeleteAnswer", { id: id }, function (response) {
                        if (response.success) {
                            row.fadeOut(500, function () { $(this).remove(); });
                        } else {
                            alert("Silme işlemi başarısız oldu.");
                        }
                    });
                }
            });
        });
    </script>
}