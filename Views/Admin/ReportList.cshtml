@model List<_20241129402SoruCevapPortali.Models.UserReport>
@{
    ViewData["Title"] = "Raporlar";
}

<div class="container mt-4">
    <h3 class="text-white mb-3"><i class="fas fa-exclamation-triangle text-warning"></i> Bekleyen Şikayetler</h3>

    <div class="table-responsive">
        <table class="table table-dark table-hover border-secondary">
            <thead>
                <tr class="text-warning">
                    <th>Tarih</th>
                    <th>Şikayet Eden</th>
                    <th>Şikayet Edilen (ID)</th>
                    <th>Sebep</th>
                    <th>Açıklama</th>
                    <th>Kanıt</th>
                    <th>İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Date.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>@item.ReporterId</td>
                        <td>@item.ReportedUserId</td>
                        <td><span class="badge bg-danger">@item.Reason</span></td>
                        <td>@item.Description</td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.ScreenshotUrl) && item.ScreenshotUrl != "Resim yok")
                            {
                                <a href="@item.ScreenshotUrl" target="_blank" class="btn btn-sm btn-outline-info">
                                    <i class="fas fa-image"></i> Gör
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td>
                            <a href="/Admin/ReviewReport/@item.Id" class="btn btn-sm btn-success" onclick="return confirm('Bu raporu incelendi olarak işaretlemek istiyor musunuz?');">
                                <i class="fas fa-check"></i> Tamamla
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @if (Model.Count == 0)
        {
            <div class="alert alert-success text-center">Harika! Bekleyen hiç şikayet yok.</div>
        }
    </div>
</div>