@model _20241129402SoruCevapPortali.Models.User
@{
    ViewData["Title"] = "Profil";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow mb-4">
            <div class="card-header bg-primary text-white">
                <h6 class="m-0 font-weight-bold text-white">Profil Bilgileri</h6>
            </div>
            <div class="card-body">
                <form method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />

                    <div class="d-flex align-items-center mb-4 p-3 border rounded bg-light">
                        <div class="mr-3">
                            <img id="imgPreview"
                                 src="@(string.IsNullOrEmpty(Model.PhotoUrl) ? "/img/undraw_profile.svg" : Model.PhotoUrl)"
                                 class="rounded-circle img-thumbnail"
                                 style="width: 80px; height: 80px; object-fit: cover;" />
                        </div>

                        <div>
                            <h5 class="text-gray-900 mb-1 font-weight-bold">@Model.Username</h5>
                            <p class="text-muted small mb-2">@Model.Role</p>

                            <label class="btn btn-sm btn-outline-primary mb-0" style="cursor: pointer;">
                                <i class="fas fa-camera mr-1"></i> Fotoğrafı Değiştir
                                <input type="file" name="ImageFile" style="display: none;"
                                       onchange="document.getElementById('imgPreview').src = window.URL.createObjectURL(this.files[0])">
                            </label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="small font-weight-bold text-gray-700">Ad</label>
                            <input type="text" asp-for="Name" class="form-control" placeholder="Adınız" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="small font-weight-bold text-gray-700">Soyad</label>
                            <input type="text" asp-for="Surname" class="form-control" placeholder="Soyadınız" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="small font-weight-bold text-gray-700">Kullanıcı Adı (Nick)</label>
                        <input type="text" asp-for="Username" class="form-control bg-white" readonly />
                        <small class="text-muted">Kullanıcı adı değiştirilemez.</small>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="small font-weight-bold text-gray-700">E-Posta</label>
                            <input type="email" asp-for="Email" class="form-control" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="small font-weight-bold text-gray-700">Telefon</label>
                            <input type="text" asp-for="PhoneNumber" class="form-control" />
                        </div>
                    </div>

                    <hr />

                    <div class="mb-3">
                        <label class="small font-weight-bold text-gray-700">Şifre</label>
                        <input type="text" asp-for="Password" class="form-control" placeholder="Değiştirmek istemiyorsanız mevcut şifreniz kalsın" />
                    </div>

                    <button type="submit" class="btn btn-primary btn-block">
                        <i class="fas fa-save mr-2"></i> Değişiklikleri Kaydet
                    </button>
                </form>
            </div>
        </div>  
    </div>
</div>