@using _20241129402SoruCevapPortali.Models
@using Microsoft.AspNetCore.Identity
@inject UserManager<AppUser> UserManager
@model AppUser

@{
    ViewData["Title"] = "Profilim";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var roles = await UserManager.GetRolesAsync(Model);
    var myRole = roles.FirstOrDefault() ?? "Standart Kullanıcı";
}

<div class="row">
    <div class="col-lg-6">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Profil Bilgileri</h6>
            </div>
            <div class="card-body">
                @* *@
                <form method="post" action="/Admin/UpdateProfile" enctype="multipart/form-data">

                    <input type="hidden" name="Id" value="@Model.Id" />

                    <div class="form-group text-center">
                        <img src="@Model.PhotoUrl" class="rounded-circle img-thumbnail" style="width: 150px; height: 150px; object-fit: cover;">
                        <br />
                        <label class="mt-2">Profil Resmi Değiştir</label>
                        <input type="file" name="file" class="form-control-file border p-1" />
                    </div>

                    <div class="form-group">
                        <label>Kullanıcı Adı (Değiştirilemez)</label>
                        <input type="text" class="form-control" value="@Model.UserName" readonly />
                    </div>

                    <div class="form-group">
                        <label>E-Posta Adresi</label>
                        <input type="email" class="form-control" name="Email" value="@Model.Email" readonly />
                        <small class="text-muted">E-posta değişimi için yönetici ile görüşün.</small>
                    </div>

                    <div class="form-group">
                        <label>Ad</label>
                        <input type="text" class="form-control" name="Name" value="@Model.Name" />
                    </div>

                    <div class="form-group">
                        <label>Soyad</label>
                        <input type="text" class="form-control" name="Surname" value="@Model.Surname" />
                    </div>

                    <div class="form-group">
                        <label>Rol</label>
                        <input type="text" class="form-control" value="@myRole" disabled />
                    </div>

                    <hr>
                    <button type="submit" class="btn btn-primary btn-block">Bilgileri Güncelle</button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-danger">Güvenlik</h6>
            </div>
            <div class="card-body">
                <p>Şifrenizi değiştirmek istiyorsanız aşağıdaki butonu kullanın.</p>
                <a href="#" class="btn btn-danger btn-icon-split">
                    <span class="icon text-white-50">
                        <i class="fas fa-key"></i>
                    </span>
                    <span class="text">Şifre Değiştir</span>
                </a>
            </div>
        </div>
    </div>
</div>