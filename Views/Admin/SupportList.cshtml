@model List<_20241129402SoruCevapPortali.Models.SupportTicket>
    @{
    ViewData["Title"] = "Destek Talepleri";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }

    <div class="container-fluid">

        <h1 class="h3 mb-2 text-gray-800">Destek Talepleri</h1>
        <p class="mb-4">Kullanıcılardan gelen yardım ve iletişim taleplerini buradan yönetebilirsiniz.</p>

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Açık Talepler</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="supportTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Tarih</th>
                                <th>Kullanıcı ID</th>
                                <th>Konu</th>
                                <th>Durum</th>
                                <th>İşlem</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@item.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>
                                    <span class="badge badge-secondary">@item.UserId</span>
                                </td>
                                <td class="font-weight-bold">@item.Subject</td>
                                <td>
                                    <span class="badge badge-success">Açık</span>
                                </td>
                                <td class="text-center">
                                    <a href="/Admin/SupportDetails/@item.Id" class="btn btn-info btn-icon-split btn-sm">
                                        <span class="icon text-white-50">
                                            <i class="fas fa-comments"></i>
                                        </span>
                                        <span class="text">Oku & Cevapla</span>
                                    </a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>

                    @if (Model.Count == 0)
                    {
                    <div class="text-center p-5">
                        <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                        <h5 class="text-gray-500">Harika! Bekleyen destek talebi yok.</h5>
                    </div>
                    }
                </div>
            </div>
        </div>

    </div>

    @section Scripts {
    <script>
        $(document).ready(function() {
            $('#supportTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Turkish.json"
                },
                "order": [[ 0, "asc" ]]
            });
        });
    </script>
    }
