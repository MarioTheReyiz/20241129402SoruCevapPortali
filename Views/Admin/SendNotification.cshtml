@{
    ViewData["Title"] = "Bildirim Gönder";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3 bg-primary">
                <h6 class="m-0 font-weight-bold text-white">
                    <i class="fas fa-paper-plane mr-2"></i>Yeni Bildirim Oluştur
                </h6>
            </div>
            <div class="card-body">
                @if (Context.Request.Query["success"] == "true")
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <strong>Başarılı!</strong> Bildirim gönderildi.
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }

                <form method="post" action="/Admin/SendNotification">

                    <div class="form-group">
                        <label class="font-weight-bold">Mesajınız:</label>
                        <textarea name="message" class="form-control" rows="4" placeholder="Buraya mesajınızı yazın..." required></textarea>
                    </div>

                    <div class="form-group">
                        <label class="font-weight-bold">Kime Gönderilsin?</label>
                        <select name="targetType" class="form-control" id="targetSelect">
                            <option value="All">📢 Herkese (Tüm Kullanıcılar)</option>
                            <option value="Admin">🛡️ Sadece Yöneticilere</option>
                            <option value="Moderator">cop️ Sadece Moderatörlere</option>
                            <option value="SpecificUser">👤 Belirli Bir Kişiye</option>
                        </select>
                    </div>

                    <div class="form-group" id="userSelectDiv" style="display:none;">
                        <label class="font-weight-bold">Kullanıcı Seçin:</label>
                        @Html.DropDownList("specificUserId", (SelectList)ViewBag.Users, "Bir Kullanıcı Seçiniz...", new { @class = "form-control" })
                    </div>

                    <hr />
                    <button type="submit" class="btn btn-success btn-block btn-lg">
                        <i class="fas fa-check mr-2"></i> Gönder
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Hedef seçimine göre kullanıcı listesini aç/kapa
        $("#targetSelect").change(function() {
            if ($(this).val() == "SpecificUser") {
                $("#userSelectDiv").slideDown();
            } else {
                $("#userSelectDiv").slideUp();
            }
        });
    </script>
}