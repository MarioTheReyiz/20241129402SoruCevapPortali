@model List<_20241129402SoruCevapPortali.Models.Question>
@{
    ViewData["Title"] = "Forum Soruları";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var users = ViewBag.Users as Dictionary<string, _20241129402SoruCevapPortali.Models.AppUser>;
}

<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">Forum Soruları</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Tüm Konular</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Tarih</th>
                            <th>Kullanıcı</th>
                            <th>Başlık</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            string userName = "Silinmiş Üye";
                            string userPic = "/img/undraw_profile.svg";
                            string userBadge = "secondary";

                            if (users != null && users.ContainsKey(item.UserId))
                            {
                                var u = users[item.UserId];
                                userName = u.UserName;
                                if (!string.IsNullOrEmpty(u.PhotoUrl)) { userPic = u.PhotoUrl; }
                                if (u.UserName == User.Identity.Name) { userBadge = "primary"; }
                            }

                            <tr>
                                <td>@item.CreatedDate.ToString("dd.MM.yyyy")</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img class="img-profile rounded-circle mr-2" src="@userPic" style="width: 35px; height: 35px; object-fit: cover;">
                                        <div>
                                            <span class="badge badge-@userBadge">@userName</span>
                                            <div class="small text-muted">ID: @item.UserId</div>
                                        </div>
                                    </div>
                                </td>
                                <td>@item.Title</td>
                                <td>
                                    @if (item.IsApproved)
                                    {
                                        <span class="badge badge-success">Yayında</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-warning">Gizli/Onaysız</span>
                                    }
                                </td>
                                <td>
                                    <a href="/Admin/ForumDetails/@item.Id" class="btn btn-info btn-sm">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="/Admin/EditQuestion/@item.Id" class="btn btn-warning btn-sm">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="/Admin/DeleteQuestion/@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('Silmek istediğine emin misin?');">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>