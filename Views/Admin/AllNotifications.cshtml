@model List<_20241129402SoruCevapPortali.Models.Notification>
@{
    ViewData["Title"] = "Tüm Bildirimler"; Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Gelen Kutusu</h6>
    </div>
    <div class="card-body">
        @if (Model.Count > 0)
        {
            <div class="list-group">
                @foreach (var item in Model)
                {
                    <a href="#" class="list-group-item list-group-item-action flex-column align-items-start">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1 text-gray-900">
                                <i class="fas fa-envelope text-primary mr-2"></i> @item.SenderName
                            </h5>
                            <small>@item.Date.ToString("dd.MM.yyyy HH:mm")</small>
                        </div>
                        <p class="mb-1">@item.Message</p>
                        <small class="text-muted">
                            Hedef:
                            @if (item.TargetRole == "All")
                            {
                                <span class="badge badge-info">Herkese</span>
                            }
                            else if (item.TargetRole == "Private")
                            {

                                <span class="badge badge-success">Size Özel</span>
                            }
                            else
                            {

                                <span class="badge badge-warning">@item.TargetRole Grubu</span>
                            }
                        </small>
                    </a>
                }
            </div>
        }
        else
        {
            <div class="text-center p-5 text-muted">
                <i class="fas fa-inbox fa-3x mb-3"></i><br>
                Henüz hiç bildiriminiz yok.
            </div>
        }
    </div>
</div>