@model _20241129402SoruCevapPortali.Models.SupportTicket
@{
    ViewData["Title"] = "Talep Detayı";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">

    <div class="d-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 text-gray-800">Talep #@Model.Id</h1>
        <a href="/Admin/SupportList" class="btn btn-secondary btn-sm shadow-sm"><i class="fas fa-arrow-left"></i> Listeye Dön</a>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">@Model.Subject</h6>
                </div>
                <div class="card-body" style="background-color: #f8f9fc;">
                    <div class="chat-box" style="height: 400px; overflow-y: auto; padding: 10px;">
                        @if (ViewBag.Messages != null)
                        {
                            foreach (var msg in ViewBag.Messages as List<_20241129402SoruCevapPortali.Models.TicketMessage>)
                            {
                                bool isAdmin = msg.SenderId != Model.UserId;

                                <div class="d-flex mb-3 @(isAdmin ? "justify-content-end" : "justify-content-start")">
                                    <div class="p-3 rounded shadow-sm text-white"
                                         style="max-width: 75%; background-color: @(isAdmin ? "#4e73df" : "#858796");">
                                        <div class="small text-white-50 mb-1">
                                            @(isAdmin ? "Destek Ekibi" : "Kullanıcı") • @msg.Date.ToString("HH:mm")
                                        </div>
                                        <div>@msg.Content</div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
                <div class="card-footer">
                    <form asp-action="AdminReply" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />

                        <div class="form-group">
                            <textarea name="content" class="form-control" rows="3" placeholder="Yanıtınız buraya yazın..."></textarea>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input" id="closeTicketCheck" name="closeTicket" value="true">
                                <label class="custom-control-label text-danger font-weight-bold" for="closeTicketCheck">Yanıtla ve Talebi Kapat</label>
                            </div>
                            <button type="submit" class="btn btn-primary px-4 font-weight-bold">
                                <i class="fas fa-paper-plane"></i> Gönder
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Kullanıcı Bilgileri</h6>
                </div>
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-user-circle fa-5x text-gray-300"></i>
                    </div>
                    <h5>ID: <span class="badge badge-light">@Model.UserId</span></h5>
                    <hr>
                    <a href="/Admin/Users" class="btn btn-info btn-sm btn-block">Kullanıcı Profiline Git</a>
                </div>
            </div>
        </div>
    </div>

</div>