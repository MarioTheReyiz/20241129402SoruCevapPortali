@model List<_20241129402SoruCevapPortali.Models.Log>
@{
    ViewData["Title"] = "Sistem Kayıtları"; Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 bg-dark text-white">
        <h6 class="m-0 font-weight-bold text-white"><i class="fas fa-history"></i> Sistem İşlem Geçmişi</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-sm" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Zaman</th>
                        <th>Kullanıcı</th>
                        <th>İşlem</th>
                        <th>Detay</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var log in Model)
                    {
                        <tr>
                            <td>@log.Date.ToString("dd.MM.yyyy HH:mm:ss")</td>
                            <td><span class="badge badge-secondary">@log.Username</span></td>
                            <td class="text-primary font-weight-bold">@log.Action</td>
                            <td>@log.Details</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>