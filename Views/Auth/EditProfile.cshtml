@model _20241129402SoruCevapPortali.Models.AppUser
@{
    ViewData["Title"] = "Profili Düzenle";

    // --- LEVEL HESAPLAMA ---
    int levelCap = 100;
    int currentTotalXp = Model.ExperiencePoints;
    int currentLevelBaseXp = (Model.Level - 1) * levelCap;
    int xpInThisLevel = currentTotalXp - currentLevelBaseXp;
    int xpNeededForNext = levelCap - xpInThisLevel;
    int percent = (Model.Level >= 10) ? 100 : xpInThisLevel;
}

<div class="container mt-5">
    <div class="row justify-content-center">

        <div class="col-md-5 mb-4">
            <div class="card bg-dark text-white border-danger shadow-lg h-100">

                <div class="card-header bg-gradient-danger text-center py-4 border-0 position-relative">
                    <div class="position-relative d-inline-block">
                        <img src="@(Model.PhotoUrl ?? "/img/undraw_profile.svg")" class="rounded-circle border border-4 border-dark bg-secondary" width="130" height="130" style="object-fit:cover;" />
                        <span class="position-absolute bottom-0 end-0 badge rounded-circle bg-warning text-dark border border-dark p-2 fs-6 fw-bold" style="width: 40px; height: 40px; display:flex; align-items:center; justify-content:center;">
                            @Model.Level
                        </span>
                    </div>
                    <h3 class="mt-3 fw-bold">@Model.UserName</h3>
                    <div class="badge bg-dark border border-warning text-warning px-3 py-2 fs-6 mt-1">@Model.Badge</div>
                </div>

                <div class="card-body">
                    <div class="mb-4 p-3 bg-black rounded border border-secondary">
                        <div class="d-flex justify-content-between align-items-end mb-2">
                            <span class="text-white-50 small">MEVCUT XP</span>
                            <span class="fw-bold text-white">@Model.ExperiencePoints XP</span>
                        </div>

                        <div class="progress bg-secondary" style="height: 12px; border-radius: 10px;">
                            <div class="progress-bar bg-danger progress-bar-striped progress-bar-animated"
                                 role="progressbar"
                                 style="width: @percent%">
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-2 small">
                            <span class="text-muted">Lvl @Model.Level</span>
                            @if (Model.Level < 10)
                            {
                                <span class="text-warning">Sonraki: <strong>@xpNeededForNext XP</strong> kaldı</span>
                            }
                            else
                            {
                                <span class="text-success fw-bold">MAX SEVİYE!</span>
                            }
                        </div>
                    </div>

                    <div class="row g-2 mb-3">
                        <div class="col-4">
                            <div class="p-2 bg-black rounded border border-secondary text-center h-100">
                                <i class="fas fa-question text-primary mb-1"></i>
                                <div class="small text-white-50" style="font-size: 0.65rem;">SORU</div>
                                <div class="fw-bold text-white">@ViewBag.SoruSayisi</div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="p-2 bg-black rounded border border-secondary text-center h-100">
                                <i class="fas fa-comment-dots text-warning mb-1"></i>
                                <div class="small text-white-50" style="font-size: 0.65rem;">CEVAP</div>
                                <div class="fw-bold text-white">@ViewBag.CevapSayisi</div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="p-2 bg-black rounded border border-secondary text-center h-100">
                                <i class="fas fa-heart text-danger mb-1"></i>
                                <div class="small text-white-50" style="font-size: 0.65rem;">LIKE</div>
                                <div class="fw-bold text-white">@ViewBag.ToplamBegeni</div>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-dark border-secondary text-center small text-white-50 mt-3">
                        <i class="fas fa-info-circle text-warning"></i> Fotoğrafını veya bilgilerini yan taraftan güncelleyebilirsin.
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-7">
            <div class="card bg-dark text-white border-secondary shadow-lg h-100">
                <div class="card-header border-secondary">
                    <h4 class="m-0 text-danger"><i class="fas fa-user-edit"></i> Bilgileri Güncelle</h4>
                </div>
                <div class="card-body">

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">@Html.ValidationSummary()</div>
                    }

                    <form method="post" enctype="multipart/form-data">

                        <div class="mb-4">
                            <label class="form-label text-warning">Profil Fotoğrafı</label>
                            <input type="file" name="ImageFile" class="form-control bg-black text-white border-secondary" />
                            <div class="form-text text-white-50">Değiştirmek istemiyorsanız boş bırakın.</div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Kullanıcı Adı</label>
                            <div class="input-group">
                                <span class="input-group-text bg-secondary border-secondary text-white"><i class="fas fa-user"></i></span>
                                <input type="text" name="UserName" value="@Model.UserName" class="form-control bg-black text-white border-secondary" required />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Ad</label>
                                <input type="text" name="Name" value="@Model.Name" class="form-control bg-black text-white border-secondary" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Soyad</label>
                                <input type="text" name="Surname" value="@Model.Surname" class="form-control bg-black text-white border-secondary" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Telefon</label>
                            <div class="input-group">
                                <span class="input-group-text bg-secondary border-secondary text-white"><i class="fas fa-phone"></i></span>
                                <input type="text" name="PhoneNumber" value="@Model.PhoneNumber" class="form-control bg-black text-white border-secondary" />
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label">E-Posta (Sabit)</label>
                            <input type="text" value="@Model.Email" class="form-control bg-dark border-0 text-muted" disabled />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success fw-bold py-2"><i class="fas fa-save"></i> Değişiklikleri Kaydet</button>
                        </div>
                    </form>

                    <hr class="bg-secondary my-4" />

                    <h5 class="text-warning mb-3">Güvenlik</h5>
                    <a href="/Auth/ForgotPassword" class="btn btn-outline-warning w-100">
                        <i class="fas fa-key"></i> Şifremi Değiştir / Sıfırla
                    </a>

                </div>
            </div>
        </div>

    </div>
</div>

<style>
    .bg-gradient-danger {
        background: linear-gradient(135deg, #a71d31 0%, #3f0d12 100%);
    }
</style>