@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <title>Yeni Şifre Belirle</title>
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">
</head>
<body class="bg-gradient-warning">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-6">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Yeni Şifrenizi Girin</h1>
                            </div>

                            @if (ViewBag.Error != null)
                            {
                                <div class="alert alert-danger">@ViewBag.Error</div>
                            }

                            <form class="user" method="post" action="/Auth/ResetPassword">
                                <div class="form-group">
                                    <input type="password" name="newPassword" class="form-control form-control-user" placeholder="Yeni Şifre" required>
                                </div>
                                <div class="form-group">
                                    <input type="password" name="confirmPassword" class="form-control form-control-user" placeholder="Yeni Şifre (Tekrar)" required>
                                </div>
                                <button type="submit" class="btn btn-success btn-user btn-block">
                                    Şifreyi Güncelle
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>