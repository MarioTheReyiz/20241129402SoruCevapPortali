@model _20241129402SoruCevapPortali.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Kayıt Ol";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <title>Kayıt Ol - Soru Cevap Portalı</title>
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">
</head>
<body class="bg-gradient-primary">
    <div class="container">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image" style="background-image: url('https://source.unsplash.com/Mv9hjnEUHR4/600x800');"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Hesap Oluştur!</h1>
                            </div>

                            <div class="text-danger mb-3">
                                @Html.ValidationSummary()
                            </div>

                            <form asp-action="Register" method="post" class="user">

                                <div class="form-group">
                                    <input type="text" asp-for="UserName" class="form-control form-control-user" placeholder="Kullanıcı Adı">
                                </div>

                                <div class="form-group">
                                    <input type="email" asp-for="Email" class="form-control form-control-user" placeholder="E-Posta Adresi">
                                </div>

                                <div class="form-group">
                                    <input type="text" asp-for="PhoneNumber" class="form-control form-control-user" placeholder="Telefon Numarası (5XX...)">
                                </div>

                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="password" asp-for="Password" class="form-control form-control-user" placeholder="Şifre">
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="password" asp-for="ConfirmPassword" class="form-control form-control-user" placeholder="Şifre Tekrar">
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-primary btn-user btn-block">
                                    Kayıt Ol
                                </button>
                            </form>
                            <hr>
                            <div class="text-center">
                                <a class="small" href="/Auth/Login">Zaten hesabın var mı? Giriş Yap!</a>
                            </div>
                            <div class="text-center">
                                <a class="small" href="/Home/Index">Siteye Geri Dön</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>