@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <title>Şifremi Unuttum</title>
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">
</head>
<body class="bg-gradient-primary">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-6 col-lg-6 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-2">Şifrenizi mi Unuttunuz?</h1>
                                <p class="mb-4">Kullanıcı adınızı ve e-posta adresinizi girin, şifrenizi sıfırlayalım.</p>
                            </div>

                            @if (ViewBag.Error != null)
                            {
                                <div class="alert alert-danger">@ViewBag.Error</div>
                            }

                            <form class="user" method="post">
                                <div class="form-group">
                                    <input type="text" name="username" class="form-control form-control-user" placeholder="Kullanıcı Adı" required>
                                </div>
                                <div class="form-group">
                                    <input type="email" name="email" class="form-control form-control-user" placeholder="E-Posta Adresi" required>
                                </div>
                                <button type="submit" class="btn btn-primary btn-user btn-block">
                                    Şifremi Sıfırla
                                </button>
                            </form>
                            <hr>
                            <div class="text-center">
                                <a class="small" href="/Auth/Register">Hesap Oluştur</a>
                            </div>
                            <div class="text-center">
                                <a class="small" href="/Auth/Login">Zaten üye misiniz? Giriş Yapın</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>